# 개발 환경 변수 설정 예시
# 실제 사용 시 .env 파일로 복사하여 사용

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
DB_HOST=localhost
DB_PORT=3306

# User Service & Product Service (common_db)
COMMON_DB_NAME=common_db
COMMON_DB_USERNAME=dev_user
COMMON_DB_PASSWORD=dev_password_123

# Coupon Service (coupon_db)
COUPON_DB_NAME=coupon_db
COUPON_DB_USERNAME=dev_user
COUPON_DB_PASSWORD=dev_password_123

# JWT Configuration
JWT_SECRET=myDevSecretKeyForJWTTokenGenerationThatShouldBeAtLeast256BitsLongForDevelopment
JWT_VALIDITY=7200

# CORS Configuration (개발환경)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001
CORS_ALLOWED_CREDENTIALS=true

# External Service URLs
PRODUCT_SERVICE_URL=http://localhost:8081
COUPON_SERVICE_URL=http://localhost:8082
USER_SERVICE_URL=http://localhost:8080

# Logging Level
LOGGING_LEVEL_COM_ECOMMERCE=DEBUG

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus